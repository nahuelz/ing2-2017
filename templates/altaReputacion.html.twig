{% extends "base.html.twig" %}

{% block container %}
	<div class="container">
		<div style="margin-top:55px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
	    	<div class="panel panel-info">
                <div class="panel-heading">
                    <div class="panel-title">Alta reputacion</div>
                </div>

                <div class="panel-body" >
                  <!--INICIO FORMULARIO-->
                    <form id="favorForm" class="form-horizontal" enctype="multipart/form-data" role="form" method="POST" action="./?action=altaReputacionAction">  

                        <div class="form-group">
                            <label for="nombre" class="col-md-4 control-label">Nombre</label>
                            <div class="col-md-8">
                                <input type="nombre" {% if nombre %} value="{{nombre}}" {% endif %} class="form-control" name="nombre" placeholder="Nombre" required minlength="4" minlength="250">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="inicio" class="col-md-4 control-label">Inicio del rango</label>
                            <div class="col-md-8">
                                <input type="number" {% if inicio %} value="{{inicio}}" {% endif %} class="form-control" name="inicio" placeholder="Inicio del rango" required>
                            </div>
                        </div>		

                        <div class="form-group">
                            <label for="fin" class="col-md-4 control-label">Fin del rango</label>
                            <div class="col-md-8">
                                <input type="number" {% if fin %} value="{{fin}}" {% endif %} class="form-control" name="fin" placeholder="Fin del rango" required>
                            </div>
                        </div>                      

                        <div class="form-group">                                   
                            <div class="col-md-offset-4 col-md-8">
                                <button type="submit" class="btn btn-success">Agregar</button>  
                            </div>
                        </div>
                        <!--FIN FORMULARIO-->
               		</form>
        		</div>
			</div>
		</div>
	</div>
{% endblock %}