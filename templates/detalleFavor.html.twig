{% extends "base.html.twig" %}
{% block container %}
	<div class="container">    
        <div id="signupbox" style="margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <div class="panel-title">Favor</div>
                </div>

                     <div class="panel-body" >
                      <!-- Formulario postularse inicio-->
                          <form id="signupform" class="form-horizontal" role="form" method="POST" action="./?action=editarCuenta">                                                

                                <div class="form-group">
                                      <label for="nombre" class="col-md-3 control-label">Titulo</label>
                                      <div class="col-md-9">
                                            <label type="text" class="form-control" name="nombre" value="" required="">{{ favor.titulo }}</label>
                                      </div>
                                </div>

                                <div class="form-group">
                                      <label for="apellido" class="col-md-3 control-label">Descripcion</label>
                                      <div class="col-md-9">
                                            <label type="text" class="form-control" name="apellido"value="" required="">{{ favor.Descripcion }}</label>
                                      </div>
                                </div>

                                <div class="form-group">
                                      <label for="telefono" class="col-md-3 control-label">localidad</label>
                                      <div class="col-md-9">
                                            <label type="text" class="form-control" name="telefono" value="" required="">{{ favor.localidad }}</label>
                                      </div>
                                </div>

                                <div class="form-group">
                                      <label for="telefono" class="col-md-3 control-label">Imagen<br><p style="font-size: 10px; margin-left: -10px; margin-bottom: -10px;">*Compra creditos <a href="./?action=creditos">Aqui!</a></p></label>
                                      <div class="col-md-9">
                                           <img style=" width: 110px; height: 50px;" id="img" class="img-rounded" {% if favor.imagen == '' %} src="imagenes/default.png" {% else %} src="imagenes/{{ favor.imagen }}"{% endif %} alt="default" />
                                      </div>
                                </div>
                          
                          <div class="form-group">
                          <!-- Button -->                                        
                                <div class="col-md-offset-3 col-md-3">
                                      <button id="btn-signup"  class="btn btn-info"><i class="icon-hand-right"></i>Postularse</button> 
                                </div>
                            </div>
                        <!-- Formulario postularse fin-->    
                        </form>
                        <!-- Mostrar comentarios inicio-->
                          {% for comentario in comentarios %}
                            <div class="col-sm-5">
                            <div class="panel panel-default">
                            <div class="panel-heading">
                            <strong>NombreUser</strong> <span class="text-muted">commented 5 days ago</span>
                            </div>
                            <div class="panel-body">{{comentario.comentario}}</div><!-- /panel-body -->
                            </div><!-- /panel panel-default -->
                            </div><!-- /col-sm-5 -->
                          {% endfor %}
                        <!-- Mostrar comentarios fin-->

                        <form id="signupform" class="form-horizontal" role="form" method="POST" action="./?action=comentarFavor">
                            
                            <div class="form-group">
                                <input type="hidden" name="idFavor" value="{{favor.id}}"> {# obtengo el id del favor#}
                                
                                <label for="comentario" class="col-md-3 control-label">Comentario</label>
                                <div class="col-md-9">
                                    <textarea class="form-control" name="comentario" required> </textarea>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-3 col-md-3">
                                    <input id="btn-signup" class="btn btn-info" type="submit"> 
                                </div>
                            </div>

                        </form>
                    
                </div>
            </div>
        </div>
    </div>
{% endblock %}