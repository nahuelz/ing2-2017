{% extends "base.html.twig" %}
{% block container %} 

<div class="container">    
    {% if favores %}
        <div id="signupbox" style="margin-top:50px" class="mainbox col-md-12">
            <div class="panel panel-info">
                <div class="col-md-9">
                    <h3> Mis Favores</h3>
                    <hr>
                </div>         

            <div class="panel-body"> 
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th>Imagen</th>
                            <th>Titulo</th>
                            <th>Localidad</th>
                            <th>Fecha publicacion</th>
                            <th></th>
                        </tr>
                    </thead>
                    {% for favor in favores %}
                        <tbody>
                            <tr>
                                <td><img style=" width: 110px; height: 50px;" id="img" class="img-rounded" {% if favor.imagen == '' %} src="imagenes/default.png" {% else %} src="imagenes/{{ favor.imagen }}"{% endif %} alt="default" /></td>
                                <td>{{ favor.titulo }}</td>
                                <td>{{ favor.localidad }}</td>
                                <td>{{ favor.fechaPublicacion }}</td>
                                <td><a href="./?action=verDetalle&id={{ favor.id }}"> Ver </a></td>
                                <td>
                                    <form onclick="return confirm('Esta seguro de que quiere eliminar esta publicacion?')" role="form" method="POST" action="./?action=eliminarPublicacion">
                                        <input type="hidden" name="idFavor" value="{{ favor.id }}">
                                        <input style="margin-left: 20px;" id="btn-signup" class="btn btn-danger" type="submit" value="Eliminar">
                                    </form>
                                </td>
                            </tr>
                        </tbody>
                    {% endfor %}
                </table>
            </div>
        </div>
    {% else %}
     <div id="signupbox" style="margin-top:50px" class="mainbox col-md-12">
        <div class="panel panel-info">
            <div class="col-md-9">
                <h3> No tienes postulaciones</h3>
                <hr>
            </div>        
            <div class="panel-body"> 
            </div>
        </div>
    </div>
    {% endif %}
    </div>

{% endblock %}