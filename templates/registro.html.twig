{% extends "base.html.twig" %}
{% block container %}
	<div class="container">    
	    <div id="signupbox" style="margin-top:55px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
	    	<div class="panel panel-info">
				<div class="panel-heading">
	                <div class="panel-title">Registro</div>
	                      <div style="float:right; font-size: 85%; position: relative; top:-10px"><a id="signinlink" href="./?action=login">Login</a></div>
	                </div>

	                 <div class="panel-body" >
	                      <form id="signupform" class="form-horizontal" role="form" method="POST" action="./?action=registroAction">                             
	                                             
	                            <div class="form-group">
	                                  <label for="email" class="col-md-3 control-label">Email</label>
	                                  <div class="col-md-9">
	                                        <input type="email" {% if email %} value = '{{email}}' {% endif %} class="form-control" name="email" placeholder="Email" required="" minlength="4" maxlength="50">
	                                  </div>
	                            </div>

	                            <div class="form-group">
	                                  <label for="nombre" class="col-md-3 control-label">Nombre</label>
	                                  <div class="col-md-9">
	                                        <input type="text" {% if nombre %} value = '{{nombre}}' {% endif %} class="form-control" id="nombre" name="nombre" placeholder="Nombre" required="" minlength="4" maxlength="50"> 
	                                  </div>
	                            </div>
	                            <div class="form-group">
	                                  <label for="apellido" class="col-md-3 control-label">Apellido</label>
	                                  <div class="col-md-9">
	                                        <input type="text" {% if apellido %} value = '{{apellido}}' {% endif %} class="form-control" id="apellido" name="apellido" placeholder="Apellido" required="" minlength="4" maxlength="45">
	                                  </div>
	                            </div>

	                            <div class="form-group">
	                                  <label for="telefono" class="col-md-3 control-label">Telefono</label>
	                                  <div class="col-md-9">
	                                        <input type="number" {% if telefono %} value = '{{telefono}}' {% endif %} class="form-control" id="telefono" name="telefono" placeholder="telefono" required="" minlength="6" maxlength="45">
	                                  </div>
	                            </div>

	                            <div class="form-group">
	                                  <label for="password" class="col-md-3 control-label">Password</label>
	                                  <div class="col-md-9">
	                                        <input type="password" class="form-control" name="password" placeholder="Password" required="" minlength="4" maxlength="45">
	                                  </div>
	                            </div>
	                      

	                      <div class="form-group">
	                      <!-- Button -->                                        
	                            <div class="col-md-offset-3 col-md-9">
	                                  <button id="btn-signup" type="submit" class="btn btn-info usuario"><i class="icon-hand-right"></i>Registrarse</button>  
	                            </div>
	                      </div>
	                </form>
	        	</div>
			</div>
		</div>
	</div>
{% endblock %}
