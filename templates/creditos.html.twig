{% extends 'base.html.twig' %}
{% block container %}
<div class="container">    
    <div id="signupbox" style="margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div class="panel panel-info">
            <div class="panel-heading">
                <div class="panel-title">Cargar Creditos</div>
            </div>

             <div class="panel-body" >   
                <form action="./?action=cargarCreditos" id="formPremiumUser" method="POST">
                    <input type="hidden" name="precio" value="{{precio}}">
                    <div class="form-group">
                        <label>N° Tarjeta*</label>
                        <input type="text" name="numero" class="form-control" placeholder="Número de tarjeta" required autofocus title="Ingrese un numero de tarjeta de credito con 16 digitos" pattern="[0-9]{16}">
                    </div>
                    <div class="form-inline col-md-12" style="height: 45px;">
                        <div class="form-group" style="width: 30%">
                            <label>Mes*</label>
                            <input style="width: 50%;" type="number" min="1" max="12" name="mes" class="form-control" placeholder="MM"  required autofocus>
                        </div>
                        <div class="form-group" style="width: 30%">
                            <label>Año*</label>
                            <input style="width: 50%;" type="number" name="year" min="2017" max="2100" class="form-control" placeholder="YY" minlength="4" maxlength="4" required autofocus>
                        </div>
                        <div class="form-group" style="width: 30%">
                            <label>CCV*</label>
                            <input style="width: 50%;" type="text" id="ccv" name="ccv" class="form-control" placeholder="CCV" minlength="3" maxlength="3" required autofocus title="Ingrese el codigo de seguridad de 3 digitos" pattern="[0-9]{3}">
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Nombre*</label>
                        <input type="text" name="nombre" id="nombre" class="form-control" placeholder="Nombre" required autofocus>
                    </div>
                    <div class="form-group">
                        <label>Creditos*</label>
                        <p style="font-size: 10px">*El valor unitario actual del credito es de {{ precio }}$ ARS</p>
                        <input type="number" min="1"  name="cantidad" class="form-control" placeholder="Creditos" required autofocus>
                    </div>
                    <div class="form-group">
                        <label>Contraseña*</label>
                        <input type="password" name="passActual" id="passActual" placeholder="Contraseña actual" class="form-control" autofocus required="">
                    </div>

                    <div class="form-group">
                        <button id="btn-signup" type="submit" class="btn btn-info creditos">Aceptar</button>  
                    </div>
                </form>
            </div>
        </div>
    </div>  
</div>
{% endblock %}